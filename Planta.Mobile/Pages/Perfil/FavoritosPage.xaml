<?xml version="1.0" encoding="utf-8"?>
<!-- Ruta: /Planta.Mobile/Pages/Perfil/FavoritosPage.xaml | V1.2 -->
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Planta.Mobile.ViewModels"
    xmlns:trans="clr-namespace:Planta.Contracts.Transporte;assembly=Planta.Contracts"
    x:Class="Planta.Mobile.Pages.Perfil.FavoritosPage"
    x:DataType="vm:FavoritosVM"
    Title="Favoritos">

    <ScrollView>
        <!-- Usamos BindableLayout en vez de ItemsControl -->
        <HorizontalStackLayout Padding="16" Spacing="8"
                           BindableLayout.ItemsSource="{Binding Chips}">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="trans:VehiculoDto">
                    <Frame Padding="10" CornerRadius="16" HasShadow="True" Margin="0,0,8,8">
                        <Label Text="{Binding Placa}" />
                    </Frame>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </HorizontalStackLayout>
    </ScrollView>
</ContentPage>
