<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Planta.Mobile.ViewModels.Recibos"
             x:Class="Planta.Mobile.Pages.Recibos.RecibosListaPage">
    <ContentPage.BindingContext>
        <viewmodels:RecibosListVm />
    </ContentPage.BindingContext>
    <Grid RowDefinitions="Auto,*" Padding="12">
        <HorizontalStackLayout Spacing="8">
            <Button Text="Ajustes" Clicked="OnAjustesClicked" />
            <Button Text="Refrescar" Command="{Binding RefreshCmd}" />
        </HorizontalStackLayout>
        <RefreshView Grid.Row="1" Command="{Binding RefreshCmd}">
            <CollectionView ItemsSource="{Binding Items}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="12" ColumnDefinitions="Auto,*,Auto">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.OpenCmd}" CommandParameter="{Binding .}" />
                            </Grid.GestureRecognizers>
                            <Label Text="{Binding Placa}" FontAttributes="Bold"/>
                            <Label Grid.Column="1" Text="{Binding Conductor}"/>
                            <Label Grid.Column="2" Text="{Binding Estado}"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>