<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Planta.Mobile.ViewModels.Recibos"
             x:Class="Planta.Mobile.Pages.Recibos.ReciboDetallePage">
    <ContentPage.BindingContext>
        <viewmodels:ReciboProcesosVm />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label Text="{Binding Recibo.Placa}" FontSize="20" FontAttributes="Bold" />
            <Label Text="{Binding Recibo.ConductorNombre}" />
            <Label Text="{Binding Recibo.Estado}" />

            <HorizontalStackLayout Spacing="8">
                <Button Text="Actualizar" Command="{Binding RefreshCmd}" />
                <Button Text="Check-in" Command="{Binding CheckInCmd}" />
                <Button Text="Descarga Inicio" Command="{Binding DescargaInicioCmd}" />
                <Button Text="Descarga Fin" Command="{Binding DescargaFinCmd}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
