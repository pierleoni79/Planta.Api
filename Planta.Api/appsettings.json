// Ruta: /Planta.Api/appsettings.json | V1.1
{
  "Startup": {
    "SkipHost": false,
    "RunMigrations": false,
    "RunSeed": false
  },

  "ConnectionStrings": {
    "PlantaDb": "Server=(localdb)\\MSSQLLocalDB;Database=CalizaDB;Trusted_Connection=True;MultipleActiveResultSets=True;Encrypt=True;TrustServerCertificate=True"
  },

  "Cors": {
    "AllowedOrigins": [ "https://localhost:5173", "http://localhost:5173" ]
  },

  "Swagger": {
    "Enabled": true,
    "Title": "Planta API",
    "Description": "API de Planta — Catálogos, Recibos, Procesos",
    "ContactName": "Equipo Planta",
    "ContactEmail": "soporte@planta.local"
  },

  "Auth": {
    "DisableAuth": true,
    "Jwt": {
      "Authority": "",
      "Audience": "planta.api"
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },

  "AllowedHosts": "*"
}
